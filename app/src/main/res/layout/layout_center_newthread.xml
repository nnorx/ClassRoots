<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relLayoutTop">



                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/profile_photo"
                    android:layout_marginTop="20dp"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="2dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post to:"
                    android:id="@+id/post_to"
                    android:layout_toRightOf="@+id/profile_photo"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:paddingLeft="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/root_name"
                    android:layout_toRightOf="@+id/post_to"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dp"
                    android:paddingBottom="1.25dp"
                    android:textSize="18sp"
/>


            </RelativeLayout>


            <!-- username section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/relLayoutTop"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_border_bottom"
                android:id="@+id/relLayout1">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:background="@null"
                    android:hint="Title"/>

            </RelativeLayout>


            <!-- display_name section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@+id/relLayout1"
                android:background="@drawable/grey_border_bottom"
                android:id="@+id/relLayout2"
                android:layout_marginTop="15dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subtitle"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:paddingTop="50dp"
                    android:background="@null"
                    android:hint="Body (Optional)"/>

            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>
</merge>